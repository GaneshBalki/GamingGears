package com.pattern;


public class Tr {

    public static void main(String[] args) {

        int numRows = 4;
        int baseNumber = 7;

        for (int i = 1; i <= numRows; i++) {
            int numSpacesBefore = numRows - i;

            // Print spaces before the pattern
            for (int k = 0; k < numSpacesBefore; k++) {
                System.out.print(" ");
            }

            // Print repeating numbers for the pattern
            for (int j = 1; j <= i; j++) {
                System.out.print(baseNumber + " ");
            }

            System.out.println();
        }
    }
}
